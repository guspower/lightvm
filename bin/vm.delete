#!/bin/bash
bindir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
. $bindir/vm.config
config.include lxc

hostname=$1

function __intro() {
    local host=$1

    echo "DELETING: $host"
}

function __summary() {
	local host=$1

	local elapsed="$(($(date +%s)-start))"

	echo "DELETED: $host in ${elapsed}s"
}

config.init
config.initHost $hostname

__intro $hostname

lxc.stopContainer $hostname
$mode rm -fr $vmdir/.$hostname $hostdir $hostlog $hostconf

__summary $hostname
